{
  "logger": {
    "log_dir": "logs",
    "filename": "app.log",
    "level": "info",
    "rotation": "100 MB",
    "retention": "30 days",
    "console_format": "<level>{level: <8}</level> <green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> request id: {extra[request_id]} - <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>",
    "file_format": "json",
    "use_json_logs": true
  },
  "production": {
    "log_dir": "/var/log/sit-portal",
    "filename": "app.log", 
    "level": "warning",
    "rotation": "500 MB",
    "retention": "90 days",
    "console_format": "<level>{level: <8}</level> <green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> request id: {extra[request_id]} - <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>",
    "file_format": "json",
    "use_json_logs": true
  }
}